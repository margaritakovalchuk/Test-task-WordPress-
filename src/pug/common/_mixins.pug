mixin skewBlock(data)
    each item in data
        .img-block__scew
            .img-block__img_unskew(style=`background-image: url('${item.src}')`)
                .img-block__scew-text
                    span.img-block__order 1.
                    p.img-block__title IDEA
                    p.img-block__description Sed ut perspiciatis unde omnis iste natus error sit voluptatem.

mixin sliderComment(data)
    each item in data
        .slider-comment
            .row
                .col-md-4
                    .slide-inner
                        .img-wrapper
                            .img-block
                                img(src!= `${item.src}` alt=`${item.alt}`)
                .col-md-8.d-flex.flex-column
                    p.comment-text!= item.text
                    p.comment-author!= `${item.name}, ${item.role}`
